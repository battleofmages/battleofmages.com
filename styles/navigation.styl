#navigation-container
	width 100%

#navigation
	display flex
	flex-flow row
	align-items center
	justify-content space-around
	margin 2em auto
	width 100%
	max-width 900px

.navigation-item
	transform translateZ(0)
	font-size 3rem
	transition all 250ms ease-in-out

.active
	animation-name pulsate
	animation-duration 1s
	animation-iteration-count infinite
	animation-timing-function ease-in-out

pulsateRadius = 16px
@keyframes pulsate
	0%, 100%
		transform scale(1.0)
		text-shadow 0 0 pulsateRadius rgba(255, 255, 255, 0.0)
	50%
		transform scale(1.05)
		text-shadow 0 0 pulsateRadius rgba(255, 255, 255, 0.9)