#navigation-container
	width 100%

#navigation
	display flex
	flex-flow row
	align-items center
	justify-content space-around
	margin 2em auto
	margin-top 4em
	width 100%
	max-width 900px
	opacity 0
	transform translateY(120px)
	animation appear 1s forwards
	animation-delay menuAppearDelay

.navigation-item
	transform scale(1)
	font-size 2.7rem
	opacity 0.3
	transition transform 250ms ease-in-out

.active
	opacity 1
	animation-name pulsate
	animation-duration 1s
	animation-iteration-count infinite
	animation-timing-function ease-in-out

pulsateRadius = 16px
@keyframes pulsate
	0%, 100%
		transform scale(1)
		// text-shadow 0 0 pulsateRadius rgba(255, 255, 255, 0.0)
	50%
		transform scale(1.07)
		// text-shadow 0 0 pulsateRadius rgba(255, 255, 255, 0.9)